<%= provide :title, t(".title") %>
<body class="index">
  <div class="center">
    <h1 class="home">Foods & Drinks</h1>
    <h2 class="home">
      Foods & Drinks
    </h2>
    <p class="bt_position"><%= link_to t(".signup_link"), signup_path, class: "btn btn-lg btn-outline-danger" %></p>
  </div>
  <div class="row filter">
    <div class="col-md-6 col-md-offset-3">
      <div class="panel">
        <%= form_tag products_path, method: :get, remote: true, class:"panel-body form-group" do %>
          <%= select_tag :types, select_product_type, {include_blank: t(".all"), class: "form-input"} %>
          <%= select_tag :category_id, select_category,
            {multiple: true, include_blank: t(".all"), size: 3, class: "form-input"} %>
          <%= select_tag :order_by, select_type_filter, {class: "form-input"} %>
          <%= submit_tag t(".filter"), class:"btn btn-info" %>
        <% end %>
      </div>
    </div>
  </div>
  <div class="products-list">
    <h2 class="h2-index"><%= t ".header" %></h2>
    <div class="container">
      <%= will_paginate @products %>
      <div class="row products">
        <%= render @products %>
      </div>
    </div>
  </div>
</body>
